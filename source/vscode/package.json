{
  "name": "immt",
  "displayName": "iMᴍᴛ - Generic knowledge management system for flexiformal knowledge",
  "description": "todo",
  "version": "0.0.1",
  "license": "GPL3",
  "publisher": "kwarc",
  "repository": {
    "type": "git",
    "url": "github:slatex/stex-IDE"
  },
  "categories": [
    "Programming Languages",
    "Language Packs"
  ],
  "bugs": {
    "url": "https://github.com/KWARC/iMMT/issues"
  },
  "activationEvents": [
    "workspaceContains:**/*.tex"
  ],
  "editor.semanticHighlighting.enabled": true,
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "immt-viewcontainer",
          "title": "sTeX Tools",
          "icon": "img/stex.svg",
					"when": "immt.loaded"
        }
      ]
    },
    "views": {
      "immt-viewcontainer": [
				{
					"id": "immt-mathhub",
					"name": "Math Archives",
					"icon": "img/stex.svg",
					"contextualTitle": "Math Archives",
					"when": "immt.loaded"
				},
        {
          "id": "immt-tools",
          "type": "webview",
          "name": "sTeX Tools",
          "icon": "img/stex.svg",
          "contextualTitle": "sTeX Functionality",
					"when": "immt.loaded"
        }
      ]
    },
    "commands": [
      {
        "command": "immt.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": [
      {
        "title": "iMMT",
        "properties": {
          "immt.preview": {
            "type": "string",
            "default": "on save",
            "markdownDescription": "When to parse the sTeX document and show the HTML preview window",
            "enum": [
              "on save",
              "on edit",
              "manually"
            ],
            "enumDescriptions": [
              "Every time a .tex file is saved (whether changed or not)",
              "Every time a .tex file is edited (dangerous!)",
              "Only manually"
            ]
          },
          "immt.settings_toml": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to iMMT settings.toml (optional)"
          },
          "immt.immt_path": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to your immt executable"
          }
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "ignore-this": "wasm-pack build --target nodejs",
    "vscode:prepublish": "npm run package",
    "build": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "extensionDependencies": [
    "james-yu.latex-workshop"
  ],
  "ignoreDepDependencies": {
    "copy-webpack-plugin": "^12.0.2"
  },
  "devDependencies": {
    "@types/follow-redirects": "^1.14.4",
    "@types/mocha": "^10.0.9",
    "@types/node": "22.8",
    "@types/vscode": "^1.94.0",
    "@types/yauzl": "^2.10.3",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "@vscode/codicons": "^0.0.36",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "child_process": "^1.0.2",
    "follow-redirects": "^1.15.9",
    "fs": "^0.0.2",
    "mkdirp": "^3.0.1",
    "vscode-languageclient": "^9.0.1",
    "yauzl": "^3.1.3"
  }
}
