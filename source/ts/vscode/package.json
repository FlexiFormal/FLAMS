{
  "name": "flams",
  "displayName": "ùñ•ùñ´‚àÄùñ¨‚à´ - Flexiformal Annotation Management System",
  "description": "IDE for the FLAMS system and sTeX",
  "version": "0.0.1",
  "license": "GPL3",
  "publisher": "kwarc",
  "icon": "img/flams.png",
  "repository": {
    "type": "git",
    "url": "github:KWARC/FLAMS"
  },
  "categories": [
    "Programming Languages",
    "Language Packs"
  ],
  "bugs": {
    "url": "https://github.com/KWARC/FLAMS/issues"
  },
  "activationEvents": [
    "workspaceContains:**/*.tex"
  ],
  "editor.semanticHighlighting.enabled": true,
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flams-viewcontainer",
          "title": "FLAMS Tools",
          "icon": "img/flams.svg",
          "when": "flams.loaded"
        }
      ]
    },
    "views": {
      "flams-viewcontainer": [
        {
          "id": "flams-mathhub",
          "name": "Math Archives",
          "icon": "img/flams.svg",
          "contextualTitle": "Math Archives",
          "when": "flams.loaded"
        },
        {
          "id": "flams-tools",
          "type": "webview",
          "name": "FLAMS Tools",
          "icon": "img/flams.svg",
          "contextualTitle": "FLAMS Functionality",
          "when": "flams.loaded"
        }
      ]
    },
		"menus": {
			"view/item/context": [
				{
					"command": "flams.mathhub.install",
					"group": "inline",
					"when": "view == flams-mathhub && viewItem == remote"
				}
      ]
    },
    "commands": [
			{
				"command": "flams.mathhub.install",
				"title": "Install",
				"icon": {
					"light": "img/cloud-download-light.svg",
					"dark": "img/cloud-download-dark.svg"
				}
			}
    ],
    "configuration": [
      {
        "title": "FLAMS",
        "properties": {
          "flams.preview": {
            "type": "string",
            "default": "on save",
            "markdownDescription": "When to parse the sTeX document and show the HTML preview window",
            "enum": [
              "on save",
              "on edit",
              "manually"
            ],
            "enumDescriptions": [
              "Every time a .tex file is saved (whether changed or not)",
              "Every time a .tex file is edited (dangerous!)",
              "Only manually"
            ]
          },
          "flams.settings_toml": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to FLAMS settings.toml (optional)"
          },
          "flams.flams_path": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to your flams executable"
          }
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "ignore-this": "wasm-pack build --target nodejs",
    "vscode:prepublish": "npm run package",
    "build": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "extensionDependencies": [
    "james-yu.latex-workshop"
  ],
  "ignoreDepDependencies": {
    "copy-webpack-plugin": "^12.0.2"
  },
  "devDependencies": {
    "@types/follow-redirects": "^1.14.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.13",
    "@types/vscode": "^1.94.0",
    "@types/yauzl": "^2.10.3",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.0",
    "@vscode-elements/elements": "^1.11.0",
    "@vscode/codicons": "^0.0.36",
    "@kwarc/flams": "^0.0.10",
    "child_process": "^1.0.2",
    "follow-redirects": "^1.15.9",
    "fs": "^0.0.2",
    "mkdirp": "^3.0.1",
    "vscode-languageclient": "^9.0.1",
    "yauzl": "^3.2.0"
  }
}
